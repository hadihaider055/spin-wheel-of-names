# Spin Wheel of Names Configuration
# Copy this file to .env.local and customize the values

# App Configuration
NEXT_PUBLIC_APP_TITLE="Spin Wheel of Names"
NEXT_PUBLIC_APP_DESCRIPTION="A customizable spin wheel for giveaways and contests"
NEXT_PUBLIC_ENABLE_SOUND=true

# Theme Colors (hex codes without #)
NEXT_PUBLIC_PRIMARY_COLOR="3b82f6"
NEXT_PUBLIC_SECONDARY_COLOR="10b981"
NEXT_PUBLIC_BACKGROUND_COLOR="ffffff"
NEXT_PUBLIC_TEXT_COLOR="1f2937"

# Dark Mode Colors
NEXT_PUBLIC_DARK_BACKGROUND_COLOR="1f2937"
NEXT_PUBLIC_DARK_TEXT_COLOR="f9fafb"
NEXT_PUBLIC_DARK_PRIMARY_COLOR="60a5fa"
NEXT_PUBLIC_DARK_SECONDARY_COLOR="34d399"

# Wheel Configuration
NEXT_PUBLIC_SPIN_DURATION=3000
NEXT_PUBLIC_WHEEL_SIZE=400
NEXT_PUBLIC_MIN_SPINS=5
NEXT_PUBLIC_MAX_SPINS=10

# Winner Configuration
NEXT_PUBLIC_SHOW_CONFETTI=true
NEXT_PUBLIC_WINNER_DISPLAY_DURATION=5000
NEXT_PUBLIC_CELEBRATION_SOUND=true

# Audio Settings
NEXT_PUBLIC_SPIN_SOUND_PATH="/sounds/default-sound.mp3"
NEXT_PUBLIC_WINNER_SOUND_PATH=""
NEXT_PUBLIC_AUDIO_VOLUME=0.5

# Custom Branding (optional)
NEXT_PUBLIC_LOGO_URL=""
NEXT_PUBLIC_COMPANY_NAME=""
NEXT_PUBLIC_WEBSITE=""
NEXT_PUBLIC_SHOW_POWERED_BY=true

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_HISTORY=true
NEXT_PUBLIC_ENABLE_IMPORT=true
NEXT_PUBLIC_ENABLE_CUSTOM_COLORS=true

# Deletion Features
NEXT_PUBLIC_ENABLE_DELETE_PARTICIPANTS=true
NEXT_PUBLIC_ENABLE_DELETE_WINNERS=true
NEXT_PUBLIC_ENABLE_CLEAR_ALL_PARTICIPANTS=true
NEXT_PUBLIC_ENABLE_CLEAR_ALL_WINNERS=true
NEXT_PUBLIC_ENABLE_CATEGORY_MANAGEMENT=true

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=""